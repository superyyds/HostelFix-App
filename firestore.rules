rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // CRITICAL: Allow unauthenticated reads to users collection for login validation
    // This is needed for pre-auth role checking in LoginPage.jsx
    match /users/{userId} {
      // Allow unauthenticated read for email lookup during login
      allow read: if true;
      
      // Allow authenticated users to create (for registration)
      allow create: if request.auth != null;
      
      // Allow authenticated users to update their own data
      allow update: if request.auth != null;
      
      // Allow authenticated users to delete (wardens can delete via app logic)
      allow delete: if request.auth != null;
    }
    
    // Complaints collection - permissive for development
    match /complaints/{complaintId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Feedbacks collection - permissive for development
    match /feedbacks/{feedbackId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if request.auth != null;
      
      // Any authenticated user can create notifications
      allow create: if request.auth != null;
      
      // Users can update their own notifications
      allow update: if request.auth != null;
      
      // Users can delete their own notifications
      allow delete: if request.auth != null;
    }
  }
}

